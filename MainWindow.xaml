<Window x:Class="Y0daiiIRC.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:local="clr-namespace:Y0daiiIRC.Models"
        Title="y0daii IRC Client" 
        Height="800" 
        Width="1200"
        MinHeight="600"
        MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA"
        TextElement.Foreground="#323130"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="Segoe UI">
    
    <Window.Resources>
        <!-- Office 365 Color Scheme -->
        <SolidColorBrush x:Key="OfficeBlue" Color="#0078D4"/>
        <SolidColorBrush x:Key="OfficeBlueHover" Color="#106EBE"/>
        <SolidColorBrush x:Key="OfficeBluePressed" Color="#005A9E"/>
        <SolidColorBrush x:Key="OfficeBlue50" Color="#E6F3FF"/>
        <SolidColorBrush x:Key="OfficeBlue200" Color="#B3D9FF"/>
        <SolidColorBrush x:Key="OfficeBlue300" Color="#80BFFF"/>
        <SolidColorBrush x:Key="OfficeBlue700" Color="#004578"/>
        <SolidColorBrush x:Key="OfficeGreen50" Color="#E6F7E6"/>
        <SolidColorBrush x:Key="OfficeGreen200" Color="#B3E6B3"/>
        <SolidColorBrush x:Key="OfficeGreen700" Color="#004D00"/>
        <SolidColorBrush x:Key="OfficePurple25" Color="#F3F2F8"/>
        <SolidColorBrush x:Key="OfficePurple50" Color="#E6E1F7"/>
        <SolidColorBrush x:Key="OfficePurple200" Color="#B3A6E6"/>
        <SolidColorBrush x:Key="OfficePurple300" Color="#8066D9"/>
        <SolidColorBrush x:Key="OfficePurple700" Color="#4A2C7A"/>
        <SolidColorBrush x:Key="OfficePurple800" Color="#3D245F"/>
        <SolidColorBrush x:Key="OfficeGray25" Color="#FCFCFC"/>
        <SolidColorBrush x:Key="OfficeGray50" Color="#F8F9FA"/>
        <SolidColorBrush x:Key="OfficeGray100" Color="#F3F2F1"/>
        <SolidColorBrush x:Key="OfficeGray200" Color="#EDEBE9"/>
        <SolidColorBrush x:Key="OfficeGray300" Color="#E1DFDD"/>
        <SolidColorBrush x:Key="OfficeGray400" Color="#C8C6C4"/>
        <SolidColorBrush x:Key="OfficeGray500" Color="#A19F9D"/>
        <SolidColorBrush x:Key="OfficeGray600" Color="#8A8886"/>
        <SolidColorBrush x:Key="OfficeGray700" Color="#605E5C"/>
        <SolidColorBrush x:Key="OfficeGray800" Color="#484644"/>
        <SolidColorBrush x:Key="OfficeGray900" Color="#323130"/>

        <!-- Context Menus -->
        <ContextMenu x:Key="UserContextMenu">
            <MenuItem Header="Send Private Message" Click="UserContextMenu_PrivateMessage_Click">
                <MenuItem.Icon>
                    <materialDesign:PackIcon Kind="Message" Width="16" Height="16"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Whois" Click="UserContextMenu_Whois_Click">
                <MenuItem.Icon>
                    <materialDesign:PackIcon Kind="AccountSearch" Width="16" Height="16"/>
                </MenuItem.Icon>
            </MenuItem>
            <Separator/>
            <MenuItem Header="CTCP Version" Click="UserContextMenu_Version_Click">
                <MenuItem.Icon>
                    <materialDesign:PackIcon Kind="Information" Width="16" Height="16"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="CTCP Time" Click="UserContextMenu_Time_Click">
                <MenuItem.Icon>
                    <materialDesign:PackIcon Kind="Clock" Width="16" Height="16"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="CTCP Ping" Click="UserContextMenu_Ping_Click">
                <MenuItem.Icon>
                    <materialDesign:PackIcon Kind="Network" Width="16" Height="16"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>

        <ContextMenu x:Key="ChannelContextMenu">
            <MenuItem Header="Join Channel" Click="ChannelContextMenu_Join_Click">
                <MenuItem.Icon>
                    <materialDesign:PackIcon Kind="AccountPlus" Width="16" Height="16"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Leave Channel" Click="ChannelContextMenu_Leave_Click">
                <MenuItem.Icon>
                    <materialDesign:PackIcon Kind="AccountMinus" Width="16" Height="16"/>
                </MenuItem.Icon>
            </MenuItem>
            <Separator/>
            <MenuItem Header="Channel Settings" Click="ChannelContextMenu_Settings_Click">
                <MenuItem.Icon>
                    <materialDesign:PackIcon Kind="Settings" Width="16" Height="16"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>

        <ContextMenu x:Key="MessageContextMenu">
            <MenuItem Header="Copy Message" Click="MessageContextMenu_Copy_Click">
                <MenuItem.Icon>
                    <materialDesign:PackIcon Kind="ContentCopy" Width="16" Height="16"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Copy Timestamp" Click="MessageContextMenu_CopyTimestamp_Click">
                <MenuItem.Icon>
                    <materialDesign:PackIcon Kind="Clock" Width="16" Height="16"/>
                </MenuItem.Icon>
            </MenuItem>
            <Separator/>
            <MenuItem Header="Send Private Message" Click="MessageContextMenu_PrivateMessage_Click">
                <MenuItem.Icon>
                    <materialDesign:PackIcon Kind="Message" Width="16" Height="16"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Whois User" Click="MessageContextMenu_Whois_Click">
                <MenuItem.Icon>
                    <materialDesign:PackIcon Kind="AccountSearch" Width="16" Height="16"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>
        <SolidColorBrush x:Key="OfficeGray950" Color="#201F1E"/>
        
        <!-- Modern Button Styles -->
        <Style x:Key="OfficeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource OfficeBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="2" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource OfficeBlueHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource OfficeBluePressed}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="OfficeSecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource OfficeBlue}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource OfficeGray300}"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource OfficeGray100}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource OfficeBlue}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource OfficeGray200}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Compact View Styles -->
        <Style x:Key="CompactMessageBorderStyle" TargetType="Border">
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Background" Value="{StaticResource OfficeGray50}"/>
            <Setter Property="BorderBrush" Value="{StaticResource OfficeGray200}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Type}" Value="System">
                    <Setter Property="Background" Value="{StaticResource OfficeBlue50}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource OfficeBlue300}"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Type}" Value="Action">
                    <Setter Property="Background" Value="{StaticResource OfficeGreen50}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource OfficeGreen200}"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Type}" Value="Grouped">
                    <Setter Property="Background" Value="{StaticResource OfficePurple50}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource OfficePurple300}"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>



        <!-- Easing Functions -->
        <CubicEase x:Key="CubicEaseOut" EasingMode="EaseOut"/>
        <CubicEase x:Key="CubicEaseIn" EasingMode="EaseIn"/>
        <CubicEase x:Key="CubicEaseInOut" EasingMode="EaseInOut"/>

        
        <Style x:Key="NavigationItemStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource OfficeGray700}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource OfficeGray100}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource OfficeGray200}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0" Background="{StaticResource OfficeGray50}" BorderBrush="{StaticResource OfficeGray200}" BorderThickness="0,0,0,1">
            <Grid Height="32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="16,0">
                    <materialDesign:PackIcon Kind="Chat" Width="20" Height="20" VerticalAlignment="Center" Foreground="{StaticResource OfficeBlue}" Margin="0,0,8,0"/>
                    <TextBlock Text="y0daii IRC Client" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="{StaticResource OfficeGray900}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="16,0">
                    <Button x:Name="MinimizeButton" Width="46" Height="32" Background="Transparent" BorderThickness="0" Click="MinimizeButton_Click">
                        <materialDesign:PackIcon Kind="WindowMinimize" Width="10" Height="10" Foreground="{StaticResource OfficeGray700}"/>
                    </Button>
                    <Button x:Name="MaximizeButton" Width="46" Height="32" Background="Transparent" BorderThickness="0" Click="MaximizeButton_Click">
                        <materialDesign:PackIcon Kind="WindowMaximize" Width="10" Height="10" Foreground="{StaticResource OfficeGray700}"/>
                    </Button>
                    <Button x:Name="CloseButton" Width="46" Height="32" Background="Transparent" BorderThickness="0" Click="CloseButton_Click">
                        <materialDesign:PackIcon Kind="WindowClose" Width="10" Height="10" Foreground="{StaticResource OfficeGray700}"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Ribbon Bar -->
        <Border Grid.Row="1" Background="White" BorderBrush="{StaticResource OfficeGray200}" BorderThickness="0,0,0,1">
            <Grid Height="48">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Connection Status -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                    <Ellipse x:Name="StatusIndicator" Width="8" Height="8" Fill="Red" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock x:Name="StatusText" Text="Disconnected" FontSize="14" VerticalAlignment="Center" Foreground="{StaticResource OfficeGray700}"/>
                </StackPanel>
                
                <!-- Ribbon Actions -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                    <Button x:Name="ConnectButton" 
                            Content="Connect" 
                            Style="{StaticResource OfficeButtonStyle}"
                            Click="ConnectButton_Click"
                            Margin="0,0,8,0"/>
                    <Button x:Name="JoinChannelButton" 
                            Content="Join Channel" 
                            Style="{StaticResource OfficeSecondaryButtonStyle}"
                            Click="JoinChannelButton_Click"
                            Margin="0,0,8,0"/>
                    
                    <!-- DCC Transfer Manager -->
                    <Button x:Name="DCCTransferButton" 
                            Style="{StaticResource OfficeSecondaryButtonStyle}"
                            Click="DCCTransferButton_Click"
                            Margin="0,0,8,0">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileTransfer" Width="16" Height="16" Margin="0,0,8,0"/>
                                <TextBlock Text="File Transfer"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <!-- Help Menu -->
                    <Button x:Name="HelpButton" 
                            Content="Help" 
                            Style="{StaticResource OfficeSecondaryButtonStyle}"
                            Click="HelpButton_Click"
                            Margin="0,0,8,0">
                        <Button.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="About y0daii IRC Client" Click="AboutMenuItem_Click">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="Information" Width="16" Height="16"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="Keyboard Shortcuts" Click="ShortcutsMenuItem_Click">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="Keyboard" Width="16" Height="16"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="IRC Commands Help" Click="CommandsHelpMenuItem_Click">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="Help" Width="16" Height="16"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <Separator/>
                                <MenuItem Header="Check for Updates" Click="CheckForUpdatesMenuItem_Click">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="Update" Width="16" Height="16"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="View on GitHub" Click="GitHubMenuItem_Click">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="Github" Width="16" Height="16"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                    
                    <Button x:Name="SettingsButton" 
                            Style="{StaticResource OfficeSecondaryButtonStyle}"
                            Click="SettingsButton_Click"
                            Width="40"
                            Margin="8,0,0,0">
                        <materialDesign:PackIcon Kind="Settings" Width="16" Height="16"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" MinWidth="200"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200" MinWidth="150"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation Pane (Outlook-style) -->
            <Border Grid.Column="0" Background="White" BorderBrush="{StaticResource OfficeGray200}" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Navigation Header -->
                    <Border Grid.Row="0" Background="{StaticResource OfficeBlue50}" BorderBrush="{StaticResource OfficeBlue200}" BorderThickness="0,0,0,1">
                        <StackPanel Orientation="Horizontal" Margin="16,12">
                            <TextBlock Text="💬" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Y0daii IRC" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource OfficeBlue700}"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Navigation Items -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="{StaticResource OfficeGray25}">
                        <StackPanel Margin="0,12,0,0">
                            <!-- Server Section -->
                            <TextBlock Text="🌐 SERVERS" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource OfficeGray600}" Margin="16,8,16,6"/>
                            <Button x:Name="ConnectButtonNav" Content="🔌 Connect to Server" Style="{StaticResource NavigationItemStyle}" Click="ConnectButton_Click" Margin="8,0,8,8"/>
                            
                            <!-- Channels Section -->
                            <TextBlock Text="💬 CHANNELS" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource OfficeGray600}" Margin="16,16,16,6"/>
                            <StackPanel x:Name="ChannelList" Margin="0,0,0,8"/>
                            
                            <!-- Private Messages Section -->
                            <TextBlock Text="👤 PRIVATE MESSAGES" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource OfficeGray600}" Margin="16,16,16,6"/>
                            <StackPanel x:Name="PrivateMessageList" Margin="0,0,0,8"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Chat Area -->
            <Border Grid.Column="1" Background="White" BorderBrush="{StaticResource OfficeGray200}" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Chat Header -->
                    <Border Grid.Row="0" Background="{StaticResource OfficeBlue50}" BorderBrush="{StaticResource OfficeBlue200}" BorderThickness="0,0,0,1">
                        <Grid Height="56">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                                <TextBlock x:Name="ChatIcon" Text="💬" FontSize="20" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <TextBlock x:Name="ChatTitle" Text="Console" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="{StaticResource OfficeBlue700}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                                <Button x:Name="JoinChannelButtonChat" 
                                        Content="➕ Join Channel" 
                                        Style="{StaticResource OfficeSecondaryButtonStyle}"
                                        Click="JoinChannelButton_Click"
                                        Margin="0,0,8,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Messages Area -->
                    <ScrollViewer x:Name="MessageScrollViewer" 
                                  Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto"
                                  Background="White"
                                  Padding="16">
                        <ItemsControl x:Name="MessageList" ContextMenu="{StaticResource MessageContextMenu}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border>
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <!-- Default Normal View Style -->
                                                <Setter Property="Margin" Value="0,6"/>
                                                <Setter Property="Padding" Value="16,12"/>
                                                <Setter Property="CornerRadius" Value="12"/>
                                                <Setter Property="Background" Value="{StaticResource OfficeGray50}"/>
                                                <Setter Property="BorderBrush" Value="{StaticResource OfficeGray200}"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                                <Style.Triggers>
                                                    <!-- Compact view without animation -->
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding Source={x:Static local:ChatMessage.UseCompactView}}" Value="True"/>
                                                            <Condition Binding="{Binding Source={x:Static local:ChatMessage.EnableAnimations}}" Value="False"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Margin" Value="0,2"/>
                                                        <Setter Property="Padding" Value="8,4"/>
                                                        <Setter Property="CornerRadius" Value="6"/>
                                                    </MultiDataTrigger>
                                                    <!-- Message Type Triggers for Normal View -->
                                                    <DataTrigger Binding="{Binding Type}" Value="System">
                                                        <Setter Property="Background" Value="{StaticResource OfficeBlue50}"/>
                                                        <Setter Property="BorderBrush" Value="{StaticResource OfficeBlue300}"/>
                                                        <Setter Property="BorderThickness" Value="2"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Type}" Value="Action">
                                                        <Setter Property="Background" Value="{StaticResource OfficeGreen50}"/>
                                                        <Setter Property="BorderBrush" Value="{StaticResource OfficeGreen200}"/>
                                                        <Setter Property="BorderThickness" Value="1"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Type}" Value="Grouped">
                                                        <Setter Property="Background" Value="{StaticResource OfficePurple50}"/>
                                                        <Setter Property="BorderBrush" Value="{StaticResource OfficePurple300}"/>
                                                        <Setter Property="BorderThickness" Value="2"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <StackPanel>
                                            <!-- Normal View Layout -->
                                            <StackPanel>
                                                <StackPanel.Style>
                                                    <Style TargetType="StackPanel">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Source={x:Static local:ChatMessage.UseCompactView}}" Value="True">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </StackPanel.Style>
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                                    <TextBlock Text="{Binding Sender}" FontWeight="SemiBold" Foreground="{Binding SenderColor}" FontSize="15"/>
                                                    <TextBlock Text="{Binding Timestamp}" FontSize="12" Foreground="{StaticResource OfficeGray500}" Margin="12,0,0,0" VerticalAlignment="Center"/>
                                                </StackPanel>
                                                
                                                <!-- Simple content display for non-grouped messages -->
                                                <TextBlock Text="{Binding Content}" TextWrapping="Wrap">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <!-- Normal View Style -->
                                                            <Setter Property="FontSize" Value="15"/>
                                                            <Setter Property="LineHeight" Value="20"/>
                                                            <Setter Property="Foreground" Value="{StaticResource OfficeGray900}"/>
                                                            <!-- Message Type Triggers for Normal View -->
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Type}" Value="System">
                                                                    <Setter Property="Foreground" Value="{StaticResource OfficeBlue700}"/>
                                                                    <Setter Property="FontStyle" Value="Italic"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Type}" Value="Action">
                                                                    <Setter Property="Foreground" Value="{StaticResource OfficeGreen700}"/>
                                                                    <Setter Property="FontStyle" Value="Italic"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Type}" Value="Grouped">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                            
                                            <!-- Compact View Layout - Single Line -->
                                            <StackPanel Orientation="Horizontal">
                                                <StackPanel.Style>
                                                    <Style TargetType="StackPanel">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Source={x:Static local:ChatMessage.UseCompactView}}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </StackPanel.Style>
                                                <TextBlock Text="{Binding Timestamp}" FontSize="11" Foreground="{StaticResource OfficeGray500}" VerticalAlignment="Center"/>
                                                <TextBlock Text=" " FontSize="11" VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding Sender}" FontWeight="SemiBold" Foreground="{Binding SenderColor}" FontSize="13" VerticalAlignment="Center"/>
                                                <TextBlock Text=" - " FontSize="13" Foreground="{StaticResource OfficeGray600}" VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding Content}" FontSize="13" Foreground="{StaticResource OfficeGray900}" VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Type}" Value="System">
                                                                    <Setter Property="Foreground" Value="{StaticResource OfficeBlue700}"/>
                                                                    <Setter Property="FontStyle" Value="Italic"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Type}" Value="Action">
                                                                    <Setter Property="Foreground" Value="{StaticResource OfficeGreen700}"/>
                                                                    <Setter Property="FontStyle" Value="Italic"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Type}" Value="Grouped">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                            
                                            <!-- Grouped content display -->
                                            <StackPanel>
                                                <StackPanel.Style>
                                                    <Style TargetType="StackPanel">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Type}" Value="Grouped">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </StackPanel.Style>
                                                <TextBlock Text="{Binding GroupTitle}" FontWeight="SemiBold" FontSize="16" 
                                                           Foreground="{StaticResource OfficePurple700}" Margin="0,0,0,8"/>
                                                <ItemsControl ItemsSource="{Binding SubMessages}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Margin="0,2" Padding="8,4" CornerRadius="6" 
                                                                    Background="{StaticResource OfficePurple25}" 
                                                                    BorderBrush="{StaticResource OfficePurple200}" 
                                                                    BorderThickness="1">
                                                                <TextBlock Text="{Binding Content}" TextWrapping="Wrap" FontSize="14" 
                                                                           Foreground="{StaticResource OfficePurple800}"/>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Message Input -->
                    <Border Grid.Row="2" Background="{StaticResource OfficeGray25}" BorderBrush="{StaticResource OfficeGray200}" BorderThickness="0,1,0,0">
                        <Grid Margin="20,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Grid.Column="0" Background="White" BorderBrush="{StaticResource OfficeBlue200}" BorderThickness="2" CornerRadius="8" Margin="0,0,12,0">
                                <TextBox x:Name="MessageTextBox" 
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Padding="16,12"
                                         FontSize="15"
                                         KeyDown="MessageTextBox_KeyDown"
                                         VerticalAlignment="Center"
                                         ToolTip="Type your message here...">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <Border Background="{TemplateBinding Background}" 
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                CornerRadius="4">
                                                            <ScrollViewer x:Name="PART_ContentHost" 
                                                                          Margin="{TemplateBinding Padding}"
                                                                          VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </Border>
                            
                            <Button x:Name="SendButton" 
                                    Grid.Column="1"
                                    Style="{StaticResource OfficeButtonStyle}"
                                    Click="SendButton_Click"
                                    Padding="20,12"
                                    FontSize="15"
                                    FontWeight="SemiBold">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📤" FontSize="16" Margin="0,0,6,0"/>
                                    <TextBlock Text="Send"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- User List -->
            <Border Grid.Column="2" Background="White">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- User List Header -->
                    <Border Grid.Row="0" Background="{StaticResource OfficeGreen50}" BorderBrush="{StaticResource OfficeGreen200}" BorderThickness="0,0,0,1">
                        <StackPanel Orientation="Horizontal" Margin="16,12">
                            <TextBlock Text="👥" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Users" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource OfficeGreen700}"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- User List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="{StaticResource OfficeGray25}">
                        <StackPanel x:Name="UserList" Margin="12,12,12,0" ContextMenu="{StaticResource UserContextMenu}"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="{StaticResource OfficeGray100}" BorderBrush="{StaticResource OfficeGray300}" BorderThickness="0,1,0,0">
            <Grid Height="32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                    <Ellipse x:Name="StatusBarIndicator" Width="8" Height="8" Fill="Red" Margin="0,0,8,0"/>
                    <TextBlock x:Name="StatusBarText" Text="Ready" FontSize="13" Foreground="{StaticResource OfficeGray700}" VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Grid.Column="1" x:Name="ConnectionInfo" Text="" FontSize="13" Foreground="{StaticResource OfficeGray700}" VerticalAlignment="Center" Margin="20,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>
