<Window x:Class="Y0daiiIRC.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:local="clr-namespace:Y0daiiIRC.Models"
        Title="y0daii IRC Client" 
        Height="800" 
        Width="1200"
        MinHeight="600"
        MinWidth="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#F8F9FA"
        TextElement.Foreground="#323130"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="Segoe UI">
    
    <Window.Resources>
        <!-- macOS Design System Colors -->
        <!-- System Colors -->
        <SolidColorBrush x:Key="SystemBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SystemSecondaryBackground" Color="#F5F5F7"/>
        <SolidColorBrush x:Key="SystemTertiaryBackground" Color="#F2F2F7"/>
        <SolidColorBrush x:Key="SystemQuaternaryBackground" Color="#E5E5EA"/>
        
        <!-- Text Colors -->
        <SolidColorBrush x:Key="Label" Color="#000000"/>
        <SolidColorBrush x:Key="SecondaryLabel" Color="#3C3C43"/>
        <SolidColorBrush x:Key="TertiaryLabel" Color="#3C3C43"/>
        <SolidColorBrush x:Key="QuaternaryLabel" Color="#2C2C2E"/>
        
        <!-- Accent Colors -->
        <SolidColorBrush x:Key="AccentColor" Color="#007AFF"/>
        <SolidColorBrush x:Key="AccentColorHover" Color="#0056CC"/>
        <SolidColorBrush x:Key="AccentColorPressed" Color="#004499"/>
        <SolidColorBrush x:Key="AccentColorSecondary" Color="#5AC8FA"/>
        <SolidColorBrush x:Key="AccentColorTertiary" Color="#AF52DE"/>
        
        <!-- Semantic Colors -->
        <SolidColorBrush x:Key="SystemRed" Color="#FF3B30"/>
        <SolidColorBrush x:Key="SystemOrange" Color="#FF9500"/>
        <SolidColorBrush x:Key="SystemYellow" Color="#FFCC00"/>
        <SolidColorBrush x:Key="SystemGreen" Color="#34C759"/>
        <SolidColorBrush x:Key="SystemTeal" Color="#5AC8FA"/>
        <SolidColorBrush x:Key="SystemBlue" Color="#007AFF"/>
        <SolidColorBrush x:Key="SystemIndigo" Color="#5856D6"/>
        <SolidColorBrush x:Key="SystemPurple" Color="#AF52DE"/>
        <SolidColorBrush x:Key="SystemPink" Color="#FF2D92"/>
        
        <!-- Separator Colors -->
        <SolidColorBrush x:Key="Separator" Color="#3C3C43"/>
        <SolidColorBrush x:Key="OpaqueSeparator" Color="#C6C6C8"/>
        
        <!-- Fill Colors -->
        <SolidColorBrush x:Key="SystemFill" Color="#787880"/>
        <SolidColorBrush x:Key="SecondarySystemFill" Color="#787880"/>
        <SolidColorBrush x:Key="TertiarySystemFill" Color="#767680"/>
        <SolidColorBrush x:Key="QuaternarySystemFill" Color="#747480"/>

        <!-- iMessage-style Chat Bubble Styles -->
        <Style x:Key="ChatBubbleStyle" TargetType="Border">
            <Setter Property="Margin" Value="8,4"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="MaxWidth" Value="300"/>
        </Style>
        
        <Style x:Key="UserMessageBubbleStyle" TargetType="Border" BasedOn="{StaticResource ChatBubbleStyle}">
            <Setter Property="Background" Value="{StaticResource SystemBlue}"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="50,4,8,4"/>
        </Style>
        
        <Style x:Key="OtherMessageBubbleStyle" TargetType="Border" BasedOn="{StaticResource ChatBubbleStyle}">
            <Setter Property="Background" Value="{StaticResource SystemGreen}"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="8,4,50,4"/>
        </Style>
        
        <Style x:Key="SystemMessageBubbleStyle" TargetType="Border" BasedOn="{StaticResource ChatBubbleStyle}">
            <Setter Property="Background" Value="{StaticResource SystemTertiaryBackground}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="MaxWidth" Value="400"/>
        </Style>
        
        <!-- Console System Message Style (no bubble) -->
        <Style x:Key="ConsoleSystemMessageStyle" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
        
        <!-- Action Message Style (italic, different color) -->
        <Style x:Key="ActionMessageBubbleStyle" TargetType="Border" BasedOn="{StaticResource ChatBubbleStyle}">
            <Setter Property="Background" Value="{StaticResource SystemTertiaryBackground}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="MaxWidth" Value="400"/>
        </Style>
        
        <!-- Speech Tail Paths -->
        <PathGeometry x:Key="UserMessageTail">
            <PathFigure StartPoint="0,0">
                <LineSegment Point="0,8"/>
                <LineSegment Point="8,8"/>
                <LineSegment Point="0,0"/>
            </PathFigure>
        </PathGeometry>
        
        <PathGeometry x:Key="OtherMessageTail">
            <PathFigure StartPoint="8,0">
                <LineSegment Point="8,8"/>
                <LineSegment Point="0,8"/>
                <LineSegment Point="8,0"/>
            </PathFigure>
        </PathGeometry>
        
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- macOS Typography Styles -->
        <Style x:Key="LargeTitleStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="SF Pro Display"/>
            <Setter Property="FontSize" Value="34"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource Label}"/>
        </Style>
        
        <Style x:Key="Title1Style" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="SF Pro Display"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource Label}"/>
        </Style>
        
        <Style x:Key="Title2Style" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="SF Pro Display"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource Label}"/>
        </Style>
        
        <Style x:Key="Title3Style" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="SF Pro Display"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource Label}"/>
        </Style>
        
        <Style x:Key="HeadlineStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="SF Pro Text"/>
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource Label}"/>
        </Style>
        
        <Style x:Key="BodyStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="SF Pro Text"/>
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="FontWeight" Value="Regular"/>
            <Setter Property="Foreground" Value="{StaticResource Label}"/>
        </Style>
        
        <Style x:Key="CalloutStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="SF Pro Text"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Regular"/>
            <Setter Property="Foreground" Value="{StaticResource Label}"/>
        </Style>
        
        <Style x:Key="SubheadStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="SF Pro Text"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Regular"/>
            <Setter Property="Foreground" Value="{StaticResource Label}"/>
        </Style>
        
        <Style x:Key="FootnoteStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="SF Pro Text"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Regular"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryLabel}"/>
        </Style>
        
        <Style x:Key="Caption1Style" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="SF Pro Text"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Regular"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryLabel}"/>
        </Style>
        
        <Style x:Key="Caption2Style" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="SF Pro Text"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Regular"/>
            <Setter Property="Foreground" Value="{StaticResource TertiaryLabel}"/>
        </Style>
        
        <!-- macOS Button Styles -->
        <Style x:Key="macOSButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SystemBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource OpaqueSeparator}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontFamily" Value="SF Pro Text"/>
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource SystemSecondaryBackground}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource SystemTertiaryBackground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- macOS Toolbar Button Style -->
        <Style x:Key="macOSToolbarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource Label}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontFamily" Value="SF Pro Text"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#E8E8ED"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#D1D1D6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- macOS Primary Action Button Style -->
        <Style x:Key="macOSPrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontFamily" Value="SF Pro Text"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentColorHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentColorPressed}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- macOS Icon Button Style -->
        <Style x:Key="macOSIconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource Label}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="IconButtonBorder" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="IconButtonBorder" Property="Background" Value="#E8E8ED"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="IconButtonBorder" Property="Background" Value="#D1D1D6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- macOS Navigation Item Style -->
        <Style x:Key="macOSNavigationItemStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource Label}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontFamily" Value="SF Pro Text"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Regular"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource SystemSecondaryBackground}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource SystemTertiaryBackground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Context Menus -->
        <ContextMenu x:Key="UserContextMenu">
            <MenuItem Header="Send Private Message" Click="UserContextMenu_PrivateMessage_Click">
                <MenuItem.Icon>
                    <materialDesign:PackIcon Kind="Message" Width="16" Height="16"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Send File" Click="UserContextMenu_SendFile_Click">
                <MenuItem.Icon>
                    <materialDesign:PackIcon Kind="FileUpload" Width="16" Height="16"/>
                </MenuItem.Icon>
            </MenuItem>
            <Separator/>
            <MenuItem Header="Whois" Click="UserContextMenu_Whois_Click">
                <MenuItem.Icon>
                    <materialDesign:PackIcon Kind="AccountSearch" Width="16" Height="16"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Copy Nickname" Click="UserContextMenu_CopyNickname_Click">
                <MenuItem.Icon>
                    <materialDesign:PackIcon Kind="ContentCopy" Width="16" Height="16"/>
                </MenuItem.Icon>
            </MenuItem>
            <Separator/>
            <MenuItem Header="CTCP Version" Click="UserContextMenu_Version_Click">
                <MenuItem.Icon>
                    <materialDesign:PackIcon Kind="Information" Width="16" Height="16"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="CTCP Time" Click="UserContextMenu_Time_Click">
                <MenuItem.Icon>
                    <materialDesign:PackIcon Kind="Clock" Width="16" Height="16"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="CTCP Ping" Click="UserContextMenu_Ping_Click">
                <MenuItem.Icon>
                    <materialDesign:PackIcon Kind="Network" Width="16" Height="16"/>
                </MenuItem.Icon>
            </MenuItem>
            <Separator/>
            <MenuItem Header="Ignore User" Click="UserContextMenu_Ignore_Click">
                <MenuItem.Icon>
                    <materialDesign:PackIcon Kind="Block" Width="16" Height="16"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Kick User" Click="UserContextMenu_Kick_Click">
                <MenuItem.Icon>
                    <materialDesign:PackIcon Kind="AccountRemove" Width="16" Height="16"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Ban User" Click="UserContextMenu_Ban_Click">
                <MenuItem.Icon>
                    <materialDesign:PackIcon Kind="AccountCancel" Width="16" Height="16"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>

        <ContextMenu x:Key="ChannelContextMenu">
            <MenuItem Header="Join Channel" Click="ChannelContextMenu_Join_Click">
                <MenuItem.Icon>
                    <materialDesign:PackIcon Kind="AccountPlus" Width="16" Height="16"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Leave Channel" Click="ChannelContextMenu_Leave_Click">
                <MenuItem.Icon>
                    <materialDesign:PackIcon Kind="AccountMinus" Width="16" Height="16"/>
                </MenuItem.Icon>
            </MenuItem>
            <Separator/>
            <MenuItem Header="Channel Settings" Click="ChannelContextMenu_Settings_Click">
                <MenuItem.Icon>
                    <materialDesign:PackIcon Kind="Settings" Width="16" Height="16"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>

        <ContextMenu x:Key="MessageContextMenu">
            <MenuItem Header="Copy Message" Click="MessageContextMenu_Copy_Click">
                <MenuItem.Icon>
                    <materialDesign:PackIcon Kind="ContentCopy" Width="16" Height="16"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Copy Timestamp" Click="MessageContextMenu_CopyTimestamp_Click">
                <MenuItem.Icon>
                    <materialDesign:PackIcon Kind="Clock" Width="16" Height="16"/>
                </MenuItem.Icon>
            </MenuItem>
            <Separator/>
            <MenuItem Header="Send Private Message" Click="MessageContextMenu_PrivateMessage_Click">
                <MenuItem.Icon>
                    <materialDesign:PackIcon Kind="Message" Width="16" Height="16"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Whois User" Click="MessageContextMenu_Whois_Click">
                <MenuItem.Icon>
                    <materialDesign:PackIcon Kind="AccountSearch" Width="16" Height="16"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>



        <!-- Easing Functions -->
        <CubicEase x:Key="CubicEaseOut" EasingMode="EaseOut"/>
        <CubicEase x:Key="CubicEaseIn" EasingMode="EaseIn"/>
        <CubicEase x:Key="CubicEaseInOut" EasingMode="EaseInOut"/>

        
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- macOS Title Bar -->
        <Border Grid.Row="0" Background="{StaticResource SystemBackground}" BorderBrush="{StaticResource OpaqueSeparator}" BorderThickness="0,0,0,1" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid Height="28">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- macOS Traffic Lights -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0">
                    <Ellipse Width="12" Height="12" Fill="{StaticResource SystemRed}" Margin="0,0,8,0"/>
                    <Ellipse Width="12" Height="12" Fill="{StaticResource SystemYellow}" Margin="0,0,8,0"/>
                    <Ellipse Width="12" Height="12" Fill="{StaticResource SystemGreen}"/>
                </StackPanel>
                
                <!-- App Title -->
                <TextBlock Grid.Column="1" x:Name="AppTitle" Text="y0daii IRC Client" 
                           Style="{StaticResource HeadlineStyle}" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
                
                <!-- Window Controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,12,0">
                    <Button x:Name="MinimizeButton" Content="âˆ’" FontSize="14" Width="20" Height="20" Margin="2" 
                            Background="Transparent" BorderThickness="0" Click="MinimizeButton_Click"
                            Foreground="{StaticResource Label}"/>
                    <Button x:Name="MaximizeButton" Content="â–¡" FontSize="12" Width="20" Height="20" Margin="2" 
                            Background="Transparent" BorderThickness="0" Click="MaximizeButton_Click"
                            Foreground="{StaticResource Label}"/>
                    <Button x:Name="CloseButton" Content="Ã—" FontSize="14" Width="20" Height="20" Margin="2" 
                            Background="Transparent" BorderThickness="0" Click="CloseButton_Click"
                            Foreground="{StaticResource Label}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- macOS Toolbar -->
        <Border Grid.Row="1" Background="{StaticResource SystemSecondaryBackground}" BorderBrush="{StaticResource OpaqueSeparator}" BorderThickness="0,0,0,1">
            <Grid Height="48">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Connection Status -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                    <Ellipse x:Name="StatusIndicator" Width="10" Height="10" Fill="{StaticResource SystemRed}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock x:Name="StatusText" Text="Disconnected" Style="{StaticResource SubheadStyle}" VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- macOS Toolbar Actions -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,20,0">
                    <Button x:Name="ConnectButton" 
                            Content="Connect" 
                            Style="{StaticResource macOSPrimaryButtonStyle}"
                            Click="ConnectButton_Click"
                            Margin="0,0,12,0"/>
                    <Button x:Name="JoinChannelButton" 
                            Content="Join Channel" 
                            Style="{StaticResource macOSToolbarButtonStyle}"
                            Click="JoinChannelButton_Click"
                            Margin="0,0,12,0"/>
                    
                    <!-- DCC Transfer Manager -->
                    <Button x:Name="DCCTransferButton" 
                            Style="{StaticResource macOSToolbarButtonStyle}"
                            Click="DCCTransferButton_Click"
                            Margin="0,0,12,0">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“" FontSize="14" Margin="0,0,6,0"/>
                                <TextBlock Text="File Transfer"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <!-- Help Menu -->
                    <Button x:Name="HelpButton" 
                            Content="Help" 
                            Style="{StaticResource macOSToolbarButtonStyle}"
                            Click="HelpButton_Click"
                            Margin="0,0,12,0">
                        <Button.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="About y0daii IRC Client" Click="AboutMenuItem_Click">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="Information" Width="16" Height="16"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="Keyboard Shortcuts" Click="ShortcutsMenuItem_Click">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="Keyboard" Width="16" Height="16"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="IRC Commands Help" Click="CommandsHelpMenuItem_Click">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="Help" Width="16" Height="16"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <Separator/>
                                <MenuItem Header="Check for Updates" Click="CheckForUpdatesMenuItem_Click">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="Update" Width="16" Height="16"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="View on GitHub" Click="GitHubMenuItem_Click">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="Github" Width="16" Height="16"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                    
                    <Button x:Name="SettingsButton" 
                            Style="{StaticResource macOSIconButtonStyle}"
                            Click="SettingsButton_Click"
                            Margin="12,0,0,0">
                        <materialDesign:PackIcon Kind="Settings" Width="18" Height="18"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" MinWidth="200"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200" MinWidth="150"/>
            </Grid.ColumnDefinitions>

            <!-- macOS Sidebar -->
            <Border Grid.Column="0" Background="{StaticResource SystemSecondaryBackground}" BorderBrush="{StaticResource OpaqueSeparator}" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Sidebar Header -->
                    <Border Grid.Row="0" Background="{StaticResource SystemTertiaryBackground}" BorderBrush="{StaticResource OpaqueSeparator}" BorderThickness="0,0,0,1">
                        <StackPanel Orientation="Horizontal" Margin="16,12">
                            <TextBlock Text="ðŸ’¬" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="y0daii IRC" Style="{StaticResource Title3Style}"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Sidebar Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="{StaticResource SystemBackground}">
                        <StackPanel Margin="0,12,0,0">
                            <!-- Server Section -->
                            <TextBlock Text="SERVERS" Style="{StaticResource Caption1Style}" Margin="16,8,16,6" Foreground="{StaticResource SecondaryLabel}"/>
                            <Button x:Name="ConnectButtonNav" Content="ðŸ”Œ Connect to Server" Style="{StaticResource macOSNavigationItemStyle}" Click="ConnectButton_Click" Margin="8,0,8,8"/>
                            
                            <!-- Channels Section -->
                            <TextBlock Text="CHANNELS" Style="{StaticResource Caption1Style}" Margin="16,16,16,6" Foreground="{StaticResource SecondaryLabel}"/>
                            <StackPanel x:Name="ChannelList" Margin="0,0,0,8"/>
                            
                            <!-- Private Messages Section -->
                            <TextBlock Text="PRIVATE MESSAGES" Style="{StaticResource Caption1Style}" Margin="16,16,16,6" Foreground="{StaticResource SecondaryLabel}"/>
                            <StackPanel x:Name="PrivateMessageList" Margin="0,0,0,8"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- macOS Chat Area -->
            <Border Grid.Column="1" Background="{StaticResource SystemBackground}" BorderBrush="{StaticResource OpaqueSeparator}" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- macOS Chat Header -->
                    <Border Grid.Row="0" Background="{StaticResource SystemTertiaryBackground}" BorderBrush="{StaticResource OpaqueSeparator}" BorderThickness="0,0,0,1">
                        <Grid Height="48">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                                <TextBlock x:Name="ChatIcon" Text="ðŸ’¬" FontSize="18" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <TextBlock x:Name="ChatTitle" Text="Console" Style="{StaticResource Title3Style}" VerticalAlignment="Center"/>
                            </StackPanel>
                            
                        </Grid>
                    </Border>

                    <!-- macOS Messages Area -->
                    <ScrollViewer x:Name="MessageScrollViewer" 
                                  Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto"
                                  Background="{StaticResource SystemBackground}"
                                  Padding="16">
                        <ItemsControl x:Name="MessageList" ContextMenu="{StaticResource MessageContextMenu}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- User's own messages (right side, blue) -->
                                        <Border Grid.Column="1" Grid.ColumnSpan="2" 
                                                Style="{StaticResource UserMessageBubbleStyle}"
                                                Visibility="{Binding IsUserMessage, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Content}" 
                                                           TextWrapping="Wrap" 
                                                           FontSize="14" 
                                                           Foreground="White"
                                                           FontWeight="Normal"/>
                                                <TextBlock Text="{Binding Timestamp}" 
                                                           FontSize="11" 
                                                           Foreground="White" 
                                                           Opacity="0.7"
                                                           HorizontalAlignment="Right"
                                                           Margin="0,4,0,0"/>
                                            </StackPanel>
                                        </Border>
                                        
                                        <!-- Other users' messages (left side, green) -->
                                        <Border Grid.Column="0" Grid.ColumnSpan="2" 
                                                Style="{StaticResource OtherMessageBubbleStyle}"
                                                Visibility="{Binding IsOtherMessage, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Sender}" 
                                                           FontWeight="SemiBold" 
                                                           FontSize="12" 
                                                           Foreground="White" 
                                                           Opacity="0.8"
                                                           Margin="0,0,0,2"/>
                                                <TextBlock Text="{Binding Content}" 
                                                           TextWrapping="Wrap" 
                                                           FontSize="14" 
                                                           Foreground="White"
                                                           FontWeight="Normal"/>
                                                <TextBlock Text="{Binding Timestamp}" 
                                                           FontSize="11" 
                                                           Foreground="White" 
                                                           Opacity="0.7"
                                                           HorizontalAlignment="Left"
                                                           Margin="0,4,0,0"/>
                                            </StackPanel>
                                        </Border>
                                            
                                        <!-- System messages (center, grey) -->
                                        <Border Grid.Column="1" 
                                                Style="{StaticResource SystemMessageBubbleStyle}"
                                                Visibility="{Binding IsSystemMessage, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Content}" 
                                                           TextWrapping="Wrap" 
                                                           FontSize="13" 
                                                           Foreground="{StaticResource SecondaryLabel}"
                                                           FontWeight="Normal"
                                                           HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding Timestamp}" 
                                                           FontSize="10" 
                                                           Foreground="{StaticResource TertiaryLabel}" 
                                                           HorizontalAlignment="Center"
                                                           Margin="0,2,0,0"/>
                                        </StackPanel>
                                                            </Border>
                                    
                                    <!-- Console system messages (no bubble) -->
                                    <Border Grid.Column="1" 
                                            Style="{StaticResource ConsoleSystemMessageStyle}"
                                            Visibility="{Binding IsConsoleMessage, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Content}" 
                                                       TextWrapping="Wrap" 
                                                       FontSize="13" 
                                                       Foreground="{StaticResource SecondaryLabel}"
                                                       FontWeight="Normal"
                                                       HorizontalAlignment="Left"/>
                                            <TextBlock Text="{Binding Timestamp}" 
                                                       FontSize="10" 
                                                       Foreground="{StaticResource TertiaryLabel}" 
                                                       HorizontalAlignment="Left"
                                                       Margin="0,2,0,0"/>
                                            </StackPanel>
                                    </Border>
                                    
                                    <!-- Action messages (italic, different color) -->
                                    <Border Grid.Column="1" 
                                            Style="{StaticResource ActionMessageBubbleStyle}"
                                            Visibility="{Binding IsActionMessage, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Content}" 
                                                       TextWrapping="Wrap" 
                                                       FontSize="13" 
                                                       Foreground="{StaticResource Label}"
                                                       FontStyle="Italic"
                                                       FontWeight="Medium"
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding Timestamp}" 
                                                       FontSize="10" 
                                                       Foreground="{StaticResource TertiaryLabel}" 
                                                       HorizontalAlignment="Center"
                                                       Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Border>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- macOS Message Input -->
                    <Border Grid.Row="2" Background="{StaticResource SystemSecondaryBackground}" BorderBrush="{StaticResource OpaqueSeparator}" BorderThickness="0,1,0,0">
                        <Grid Margin="20,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Grid.Column="0" Background="{StaticResource SystemBackground}" BorderBrush="{StaticResource OpaqueSeparator}" BorderThickness="1" CornerRadius="8" Margin="0,0,12,0">
                                <TextBox x:Name="MessageTextBox" 
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Padding="8,6"
                                         FontSize="15"
                                         KeyDown="MessageTextBox_KeyDown"
                                         VerticalAlignment="Center"
                                         ToolTip="Type your message here...">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <Border Background="{TemplateBinding Background}" 
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                CornerRadius="4">
                                                            <ScrollViewer x:Name="PART_ContentHost" 
                                                                          Margin="{TemplateBinding Padding}"
                                                                          VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </Border>
                            
                            <Button x:Name="SendButton" 
                                    Grid.Column="1"
                                    Style="{StaticResource macOSButtonStyle}"
                                    Click="SendButton_Click"
                                    Padding="12,6"
                                    FontSize="15"
                                    FontWeight="SemiBold">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ“¤" FontSize="16" Margin="0,0,6,0"/>
                                    <TextBlock Text="Send"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- macOS User List -->
            <Border Grid.Column="2" Background="{StaticResource SystemBackground}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- User List Header -->
                    <Border Grid.Row="0" Background="{StaticResource SystemTertiaryBackground}" BorderBrush="{StaticResource OpaqueSeparator}" BorderThickness="0,0,0,1">
                        <StackPanel Orientation="Horizontal" Margin="16,12">
                            <TextBlock Text="ðŸ‘¥" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Users" Style="{StaticResource Title3Style}"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- User List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="{StaticResource SystemBackground}">
                        <StackPanel x:Name="UserList" Margin="12,12,12,0" ContextMenu="{StaticResource UserContextMenu}"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- macOS Status Bar -->
        <Border Grid.Row="3" Background="{StaticResource SystemSecondaryBackground}" BorderBrush="{StaticResource OpaqueSeparator}" BorderThickness="0,1,0,0">
            <Grid Height="28">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                    <Ellipse x:Name="StatusBarIndicator" Width="8" Height="8" Fill="{StaticResource SystemRed}" Margin="0,0,8,0"/>
                    <TextBlock x:Name="StatusBarText" Text="Ready" Style="{StaticResource Caption1Style}" VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Grid.Column="1" x:Name="ConnectionInfo" Text="" Style="{StaticResource Caption1Style}" VerticalAlignment="Center" Margin="20,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>
