<Window x:Class="Y0daiiIRC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Y0daii IRC Client" 
        Height="800" 
        Width="1200"
        MinHeight="600"
        MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}">
    
    <Window.Resources>
        <Style x:Key="ChannelButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource MaterialDesignSelection}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="UserButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource MaterialDesignSelection}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" MinWidth="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200" MinWidth="150"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <materialDesign:ColorZone Grid.ColumnSpan="3" Mode="PrimaryMid" Padding="16,8">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <materialDesign:PackIcon Kind="Chat" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Y0daii IRC Client" Style="{StaticResource MaterialDesignHeadline6TextBlock}" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <Button x:Name="ConnectButton" 
                            Content="Connect" 
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Click="ConnectButton_Click"
                            Margin="0,0,8,0"/>
                    <Button x:Name="SettingsButton" 
                            Style="{StaticResource MaterialDesignIconButton}"
                            Click="SettingsButton_Click">
                        <materialDesign:PackIcon Kind="Settings"/>
                    </Button>
                </StackPanel>
                
                <TextBlock x:Name="StatusText" 
                           Text="Disconnected" 
                           Style="{StaticResource MaterialDesignCaptionTextBlock}"
                           VerticalAlignment="Center"
                           Margin="16,0,0,0"/>
            </DockPanel>
        </materialDesign:ColorZone>

        <!-- Server/Channel List -->
        <materialDesign:Card Grid.Row="1" Margin="8,8,4,8" Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryLight" Padding="16,8">
                    <TextBlock Text="Channels" Style="{StaticResource MaterialDesignSubtitle2TextBlock}"/>
                </materialDesign:ColorZone>
                
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="ChannelList" Margin="8"/>
                </ScrollViewer>
            </Grid>
        </materialDesign:Card>

        <!-- Chat Area with Tabs -->
        <Grid Grid.Column="1" Grid.Row="1" Margin="4,8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Tab Header -->
            <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryLight" Padding="0">
                <TabControl x:Name="ChatTabs" 
                            Style="{StaticResource MaterialDesignTabControl}"
                            SelectionChanged="ChatTabs_SelectionChanged">
                    <TabItem Header="Console" Tag="console">
                        <TabItem.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Console" Width="16" Height="16" Margin="0,0,4,0"/>
                                    <TextBlock Text="Console"/>
                                </StackPanel>
                            </DataTemplate>
                        </TabItem.HeaderTemplate>
                    </TabItem>
                </TabControl>
            </materialDesign:ColorZone>

            <!-- Tab Content -->
            <Grid Grid.Row="1">
                <ScrollViewer x:Name="MessageScrollViewer" 
                              VerticalScrollBarVisibility="Auto"
                              Background="{DynamicResource MaterialDesignPaper}"
                              Padding="16">
                    <ItemsControl x:Name="MessageList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,2" Padding="8,4">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Timestamp}" 
                                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                   Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                        <TextBlock x:Name="MessageTextBlock" TextWrapping="Wrap">
                                            <TextBlock.Inlines>
                                                <Run Text="{Binding Sender}" FontWeight="Bold" Foreground="{Binding SenderColor}"/>
                                                <Run Text=": "/>
                                                <Run Text="{Binding Content}"/>
                                            </TextBlock.Inlines>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <!-- Message Input -->
            <materialDesign:Card Grid.Row="2" Margin="0,8,0,0" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button x:Name="JoinChannelButton" 
                            Grid.Column="0"
                            Style="{StaticResource MaterialDesignIconButton}"
                            Click="JoinChannelButton_Click"
                            Margin="0,0,8,0"
                            ToolTip="Join Channel">
                        <materialDesign:PackIcon Kind="AccountPlus"/>
                    </Button>
                    
                    <TextBox x:Name="MessageTextBox" 
                             Grid.Column="1"
                             materialDesign:HintAssist.Hint="Type your message or command..."
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             KeyDown="MessageTextBox_KeyDown"
                             Margin="0,0,8,0"/>
                    
                    <Button x:Name="SendButton" 
                            Grid.Column="2"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Click="SendButton_Click">
                        <materialDesign:PackIcon Kind="Send"/>
                    </Button>
                </Grid>
            </materialDesign:Card>
        </Grid>

        <!-- User List -->
        <materialDesign:Card Grid.Column="2" Grid.Row="1" Margin="4,8,8,8" Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryLight" Padding="16,8">
                    <TextBlock Text="Users" Style="{StaticResource MaterialDesignSubtitle2TextBlock}"/>
                </materialDesign:ColorZone>
                
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="UserList" Margin="8"/>
                </ScrollViewer>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Window>
