<Window x:Class="Y0daiiIRC.ServerListDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Server List" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryMid" Padding="16,8">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <materialDesign:PackIcon Kind="ServerNetwork" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Server List" Style="{StaticResource MaterialDesignHeadline6TextBlock}" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <Button x:Name="AddServerButton" 
                            Content="Add Server" 
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Click="AddServerButton_Click"
                            Margin="0,0,8,0"/>
                    <Button x:Name="EditServerButton" 
                            Content="Edit" 
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Click="EditServerButton_Click"
                            Margin="0,0,8,0"/>
                    <Button x:Name="RemoveServerButton" 
                            Content="Remove" 
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Click="RemoveServerButton_Click"
                            Margin="0,0,8,0"/>
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>

        <!-- Server List -->
        <DataGrid x:Name="ServerDataGrid" 
                  Grid.Row="1" 
                  Margin="16"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  SelectionMode="Single"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  Style="{StaticResource MaterialDesignDataGrid}">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Favorite" Binding="{Binding IsFavorite}" Width="80"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                <DataGridTextColumn Header="Host" Binding="{Binding Host}" Width="200"/>
                <DataGridTextColumn Header="Port" Binding="{Binding Port}" Width="80"/>
                <DataGridCheckBoxColumn Header="SSL" Binding="{Binding UseSSL}" Width="60"/>
                <DataGridTextColumn Header="Nickname" Binding="{Binding Nickname}" Width="120"/>
                <DataGridTextColumn Header="Last Connected" Binding="{Binding LastConnected, StringFormat=yyyy-MM-dd HH:mm}" Width="150"/>
                <DataGridTextColumn Header="Connections" Binding="{Binding ConnectionCount}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="16">
            <Button x:Name="ConnectButton"
                    Content="Connect"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Click="ConnectButton_Click"
                    Margin="0,0,8,0"/>
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
