<Window x:Class="Y0daiiIRC.ServerListDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Server List" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#F8F9FA"
        TextElement.Foreground="#323130"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="Segoe UI">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" BorderBrush="#E1DFDD" BorderThickness="0,0,0,1">
            <Grid Height="48">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                    <materialDesign:PackIcon Kind="ServerNetwork" Width="20" Height="20" VerticalAlignment="Center" Foreground="#0078D4" Margin="0,0,8,0"/>
                    <TextBlock Text="Server List" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="#323130"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                    <Button x:Name="AddServerButton" 
                            Content="Add Server" 
                            Background="#0078D4"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="12,8"
                            FontWeight="SemiBold"
                            Click="AddServerButton_Click"
                            Margin="0,0,8,0"/>
                    <Button x:Name="EditServerButton" 
                            Content="Edit" 
                            Background="Transparent"
                            Foreground="#0078D4"
                            BorderThickness="1"
                            BorderBrush="#E1DFDD"
                            Padding="12,8"
                            FontWeight="SemiBold"
                            Click="EditServerButton_Click"
                            Margin="0,0,8,0"/>
                    <Button x:Name="RemoveServerButton" 
                            Content="Remove" 
                            Background="Transparent"
                            Foreground="#0078D4"
                            BorderThickness="1"
                            BorderBrush="#E1DFDD"
                            Padding="12,8"
                            FontWeight="SemiBold"
                            Click="RemoveServerButton_Click"
                            Margin="0,0,8,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Server List -->
        <DataGrid x:Name="ServerDataGrid" 
                  Grid.Row="1" 
                  Margin="16"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  SelectionMode="Single"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  Style="{StaticResource MaterialDesignDataGrid}">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Favorite" Binding="{Binding IsFavorite}" Width="80"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                <DataGridTextColumn Header="Host" Binding="{Binding Host}" Width="200"/>
                <DataGridTextColumn Header="Port" Binding="{Binding Port}" Width="80"/>
                <DataGridCheckBoxColumn Header="SSL" Binding="{Binding UseSSL}" Width="60"/>
                <DataGridTextColumn Header="Nickname" Binding="{Binding Nickname}" Width="120"/>
                <DataGridTextColumn Header="Last Connected" Binding="{Binding LastConnected, StringFormat=yyyy-MM-dd HH:mm}" Width="150"/>
                <DataGridTextColumn Header="Connections" Binding="{Binding ConnectionCount}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons -->
        <Border Grid.Row="2" Background="White" BorderBrush="#E1DFDD" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="16,12">
                <Button x:Name="ConnectButton"
                        Content="Connect"
                        Background="#0078D4"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="16,8"
                        FontWeight="SemiBold"
                        Click="ConnectButton_Click"
                        Margin="0,0,8,0"/>
                <Button x:Name="CancelButton"
                        Content="Cancel"
                        Background="Transparent"
                        Foreground="#0078D4"
                        BorderThickness="1"
                        BorderBrush="#E1DFDD"
                        Padding="16,8"
                        FontWeight="SemiBold"
                        Click="CancelButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
