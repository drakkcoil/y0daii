<Window x:Class="Y0daiiIRC.ServerListDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Server List" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#F8F9FA"
        TextElement.Foreground="#323130"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- macOS Design System Colors -->
        <SolidColorBrush x:Key="SystemBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SystemSecondaryBackground" Color="#F2F2F7"/>
        <SolidColorBrush x:Key="SystemTertiaryBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="Label" Color="#000000"/>
        <SolidColorBrush x:Key="SecondaryLabel" Color="#3C3C43"/>
        <SolidColorBrush x:Key="TertiaryLabel" Color="#3C3C43"/>
        <SolidColorBrush x:Key="QuaternaryLabel" Color="#2C2C2E"/>
        <SolidColorBrush x:Key="AccentColor" Color="#007AFF"/>
        <SolidColorBrush x:Key="SystemRed" Color="#FF3B30"/>
        <SolidColorBrush x:Key="SystemGreen" Color="#34C759"/>
        <SolidColorBrush x:Key="SystemBlue" Color="#007AFF"/>
        <SolidColorBrush x:Key="OpaqueSeparator" Color="#C6C6C8"/>

        <!-- Button Styles -->
        <Style x:Key="macOSButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentColorHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentColorPressed}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="macOSSecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource OpaqueSeparator}"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource SystemSecondaryBackground}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource OpaqueSeparator}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" BorderBrush="{StaticResource OpaqueSeparator}" BorderThickness="0,0,0,1">
            <Grid Height="48">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                    <materialDesign:PackIcon Kind="ServerNetwork" Width="20" Height="20" VerticalAlignment="Center" Foreground="{StaticResource AccentColor}" Margin="0,0,8,0"/>
                    <TextBlock Text="Server List" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="{StaticResource Label}"/>
                </StackPanel>
                
                <Button Grid.Column="1" 
                        Width="32" 
                        Height="32" 
                        Background="Transparent" 
                        BorderThickness="0" 
                        Click="CloseButton_Click"
                        Margin="16,0">
                    <materialDesign:PackIcon Kind="Close" Width="16" Height="16" Foreground="{StaticResource SecondaryLabel}"/>
                </Button>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Server List -->
            <Border Grid.Column="0" Background="White" BorderBrush="{StaticResource OpaqueSeparator}" BorderThickness="1" CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- List Header -->
                    <Border Grid.Row="0" Background="{StaticResource SystemSecondaryBackground}" BorderBrush="{StaticResource OpaqueSeparator}" BorderThickness="0,0,0,1">
                        <Grid Height="40">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="Server Name" FontWeight="SemiBold" VerticalAlignment="Center" Margin="12,0"/>
                            <TextBlock Grid.Column="1" Text="Host" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="Port" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="3" Text="SSL" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Server Items -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="ServerListPanel"/>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Top">
                <Button x:Name="AddButton" 
                        Content="Add Server" 
                        Style="{StaticResource macOSButtonStyle}"
                        Click="AddButton_Click"
                        Margin="0,0,0,8"/>
                <Button x:Name="EditButton" 
                        Content="Edit Server" 
                        Style="{StaticResource macOSSecondaryButtonStyle}"
                        Click="EditButton_Click"
                        Margin="0,0,0,8"/>
                <Button x:Name="RemoveButton" 
                        Content="Remove Server" 
                        Style="{StaticResource macOSSecondaryButtonStyle}"
                        Click="RemoveButton_Click"
                        Margin="0,0,0,8"/>
                <Button x:Name="ConnectButton" 
                        Content="Connect" 
                        Style="{StaticResource macOSButtonStyle}"
                        Click="ConnectButton_Click"
                        Margin="0,0,0,8"/>
            </StackPanel>
        </Grid>

        <!-- Buttons -->
        <Border Grid.Row="2" Background="White" BorderBrush="{StaticResource OpaqueSeparator}" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="16,12">
                <Button x:Name="CancelButton"
                        Content="Cancel"
                        Style="{StaticResource macOSSecondaryButtonStyle}"
                        Click="CancelButton_Click"
                        Margin="0,0,8,0"/>
                <Button x:Name="OkButton"
                        Content="OK"
                        Style="{StaticResource macOSButtonStyle}"
                        Click="OkButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>