<Window x:Class="Y0daiiIRC.ServerEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Edit Server" 
        Height="600" 
        Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F8F9FA"
        TextElement.Foreground="#323130"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- macOS Design System Colors -->
        <SolidColorBrush x:Key="SystemBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SystemSecondaryBackground" Color="#F2F2F7"/>
        <SolidColorBrush x:Key="SystemTertiaryBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="Label" Color="#000000"/>
        <SolidColorBrush x:Key="SecondaryLabel" Color="#3C3C43"/>
        <SolidColorBrush x:Key="TertiaryLabel" Color="#3C3C43"/>
        <SolidColorBrush x:Key="QuaternaryLabel" Color="#2C2C2E"/>
        <SolidColorBrush x:Key="AccentColor" Color="#007AFF"/>
        <SolidColorBrush x:Key="AccentColorHover" Color="#0056CC"/>
        <SolidColorBrush x:Key="AccentColorPressed" Color="#004499"/>
        <SolidColorBrush x:Key="SystemRed" Color="#FF3B30"/>
        <SolidColorBrush x:Key="SystemGreen" Color="#34C759"/>
        <SolidColorBrush x:Key="SystemBlue" Color="#007AFF"/>
        <SolidColorBrush x:Key="OpaqueSeparator" Color="#C6C6C8"/>

        <!-- Button Styles -->
        <Style x:Key="macOSButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentColorHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentColorPressed}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="macOSSecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource OpaqueSeparator}"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource SystemSecondaryBackground}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource OpaqueSeparator}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" BorderBrush="{StaticResource OpaqueSeparator}" BorderThickness="0,0,0,1">
            <Grid Height="48">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                    <materialDesign:PackIcon Kind="Server" Width="20" Height="20" VerticalAlignment="Center" Foreground="{StaticResource AccentColor}" Margin="0,0,8,0"/>
                    <TextBlock Text="Edit Server" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="{StaticResource Label}"/>
                </StackPanel>
                
                <Button Grid.Column="1" 
                        Width="32" 
                        Height="32" 
                        Background="Transparent" 
                        BorderThickness="0" 
                        Click="CloseButton_Click"
                        Margin="16,0">
                    <materialDesign:PackIcon Kind="Close" Width="16" Height="16" Foreground="{StaticResource SecondaryLabel}"/>
                </Button>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="White">
            <StackPanel Margin="32">
                <!-- Server Information -->
                <Border Background="{StaticResource SystemSecondaryBackground}" Padding="16" CornerRadius="8" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Server Information" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource Label}" Margin="0,0,0,12"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Server Name:" Width="120" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBox x:Name="ServerNameTextBox" Width="300" Text="Libera Chat" Padding="8"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Host:" Width="120" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBox x:Name="HostTextBox" Width="300" Text="irc.libera.chat" Padding="8"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Port:" Width="120" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBox x:Name="PortTextBox" Width="100" Text="6667" Padding="8"/>
                            <CheckBox x:Name="UseSslCheckBox" Content="Use SSL" Margin="16,0,0,0" VerticalAlignment="Center" FontWeight="SemiBold"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- User Information -->
                <Border Background="{StaticResource SystemSecondaryBackground}" Padding="16" CornerRadius="8" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="User Information" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource Label}" Margin="0,0,0,12"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Nickname:" Width="120" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBox x:Name="NicknameTextBox" Width="200" Text="Y0daiiUser" Padding="8"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Username:" Width="120" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBox x:Name="UsernameTextBox" Width="200" Text="y0daii" Padding="8"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Real Name:" Width="120" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBox x:Name="RealNameTextBox" Width="300" Text="y0daii IRC User" Padding="8"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Ident Server -->
                <Border Background="{StaticResource SystemSecondaryBackground}" Padding="16" CornerRadius="8" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Ident Server (Optional)" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource Label}" Margin="0,0,0,12"/>
                        
                        <CheckBox x:Name="UseIdentCheckBox" Content="Use Ident Server" Margin="0,0,0,8" FontWeight="SemiBold"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Ident Server:" Width="120" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBox x:Name="IdentServerTextBox" Width="200" Text="127.0.0.1" Padding="8"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Ident Port:" Width="120" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBox x:Name="IdentPortTextBox" Width="100" Text="113" Padding="8"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Auto-join Channels -->
                <Border Background="{StaticResource SystemSecondaryBackground}" Padding="16" CornerRadius="8">
                    <StackPanel>
                        <TextBlock Text="Auto-join Channels" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource Label}" Margin="0,0,0,12"/>
                        <TextBlock Text="Enter channel names (one per line, include # prefix):" FontSize="12" Foreground="{StaticResource TertiaryLabel}" Margin="0,0,0,8"/>
                        
                        <TextBox x:Name="AutoJoinChannelsTextBox" 
                                 Height="80" 
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True" 
                                 VerticalScrollBarVisibility="Auto"
                                 Padding="8"
                                 Text="#general&amp;#help"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="2" Background="White" BorderBrush="{StaticResource OpaqueSeparator}" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="16,12">
                <Button x:Name="CancelButton"
                        Content="Cancel"
                        Style="{StaticResource macOSSecondaryButtonStyle}"
                        Click="CancelButton_Click"
                        Margin="0,0,8,0"/>
                <Button x:Name="SaveButton"
                        Content="Save"
                        Style="{StaticResource macOSButtonStyle}"
                        Click="SaveButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>