<Window x:Class="Y0daiiIRC.ConnectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Connect to IRC Server" 
        Height="400" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <materialDesign:PackIcon Kind="ServerNetwork" Width="48" Height="48" 
                                     HorizontalAlignment="Center" 
                                     Foreground="{DynamicResource PrimaryHueMidBrush}"/>
            <TextBlock Text="Connect to IRC Server" 
                       Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                       HorizontalAlignment="Center"
                       Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Form -->
        <StackPanel Grid.Row="1" >
            <TextBox x:Name="ServerTextBox"
                     materialDesign:HintAssist.Hint="Server Address"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Text="irc.libera.chat"/>

            <TextBox x:Name="PortTextBox"
                     materialDesign:HintAssist.Hint="Port"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Text="6667"/>

            <TextBox x:Name="NicknameTextBox"
                     materialDesign:HintAssist.Hint="Nickname"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Text="Y0daiiUser"/>

            <TextBox x:Name="UsernameTextBox"
                     materialDesign:HintAssist.Hint="Username"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Text="y0daii"/>

            <TextBox x:Name="RealNameTextBox"
                     materialDesign:HintAssist.Hint="Real Name"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Text="Y0daii IRC User"/>

            <CheckBox x:Name="UseSSLCheckBox"
                      Content="Use SSL/TLS"
                      Style="{StaticResource MaterialDesignCheckBox}"
                      Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,24,0,0">
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Click="CancelButton_Click"
                    Margin="0,0,8,0"/>
            <Button x:Name="ConnectButton"
                    Content="Connect"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Click="ConnectButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
