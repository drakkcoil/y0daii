<Window x:Class="Y0daiiIRC.DCCTransferDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="DCC File Transfer" 
        Height="500" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#F8F9FA"
        TextElement.Foreground="#323130"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- macOS Design System Colors -->
        <SolidColorBrush x:Key="SystemBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SystemSecondaryBackground" Color="#F2F2F7"/>
        <SolidColorBrush x:Key="SystemTertiaryBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="Label" Color="#000000"/>
        <SolidColorBrush x:Key="SecondaryLabel" Color="#3C3C43"/>
        <SolidColorBrush x:Key="TertiaryLabel" Color="#3C3C43"/>
        <SolidColorBrush x:Key="QuaternaryLabel" Color="#2C2C2E"/>
        <SolidColorBrush x:Key="AccentColor" Color="#007AFF"/>
        <SolidColorBrush x:Key="SystemRed" Color="#FF3B30"/>
        <SolidColorBrush x:Key="SystemGreen" Color="#34C759"/>
        <SolidColorBrush x:Key="SystemBlue" Color="#007AFF"/>
        <SolidColorBrush x:Key="OpaqueSeparator" Color="#C6C6C8"/>

        <!-- Button Styles -->
        <Style x:Key="macOSButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentColorHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentColorPressed}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="macOSSecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource OpaqueSeparator}"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource SystemSecondaryBackground}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource OpaqueSeparator}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Data Template for Transfer Items -->
        <DataTemplate x:Key="TransferItemTemplate">
            <Border Background="White" BorderBrush="{StaticResource OpaqueSeparator}" BorderThickness="1" CornerRadius="4" Margin="0,4">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- File Info -->
                    <StackPanel Grid.Row="0" Grid.Column="0">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <materialDesign:PackIcon Kind="File" Width="16" Height="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding FileName}" FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock Text="{Binding Type, StringFormat=' ({0})'}" FontSize="12" Foreground="{StaticResource TertiaryLabel}" Margin="4,0,0,0"/>
                        </StackPanel>
                        <TextBlock Text="{Binding Sender, StringFormat='From: {0}'}" FontSize="12" Foreground="{StaticResource TertiaryLabel}"/>
                    </StackPanel>

                    <!-- Status -->
                    <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right">
                        <TextBlock Text="{Binding Status}" FontWeight="SemiBold" FontSize="12" HorizontalAlignment="Right"/>
                        <TextBlock Text="{Binding ProgressPercentage, StringFormat={}{0:F1}%}" FontSize="12" Foreground="{StaticResource TertiaryLabel}" HorizontalAlignment="Right"/>
                    </StackPanel>

                    <!-- Progress Bar -->
                    <ProgressBar Grid.Row="1" Grid.ColumnSpan="2" 
                                 Value="{Binding ProgressPercentage}" 
                                 Maximum="100" 
                                 Height="8" 
                                 Margin="0,8,0,8"
                                 Background="{StaticResource OpaqueSeparator}"
                                 Foreground="{StaticResource AccentColor}"/>

                    <!-- Transfer Info -->
                    <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="{Binding BytesTransferred}" FontSize="11" Foreground="{StaticResource TertiaryLabel}"/>
                        <TextBlock Text=" / " FontSize="11" Foreground="{StaticResource TertiaryLabel}"/>
                        <TextBlock Text="{Binding FileSize}" FontSize="11" Foreground="{StaticResource TertiaryLabel}"/>
                        <TextBlock Text="{Binding TransferRate, StringFormat={} ({0}/s)}" FontSize="11" Foreground="{StaticResource TertiaryLabel}" Margin="8,0,0,0"/>
                    </StackPanel>

                    <!-- Error Message -->
                    <TextBlock Grid.Row="3" Grid.ColumnSpan="2" 
                               Text="{Binding ErrorMessage}" 
                               Foreground="Red" 
                               FontSize="11" 
                               TextWrapping="Wrap"/>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" BorderBrush="{StaticResource OpaqueSeparator}" BorderThickness="0,0,0,1">
            <Grid Height="48">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                    <materialDesign:PackIcon Kind="FileTransfer" Width="20" Height="20" VerticalAlignment="Center" Foreground="{StaticResource AccentColor}" Margin="0,0,8,0"/>
                    <TextBlock Text="DCC File Transfer" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="{StaticResource Label}"/>
                </StackPanel>
                
                <Button Grid.Column="1" 
                        Width="32" 
                        Height="32" 
                        Background="Transparent" 
                        BorderThickness="0" 
                        Click="CloseButton_Click"
                        Margin="16,0">
                    <materialDesign:PackIcon Kind="Close" Width="16" Height="16" Foreground="{StaticResource SecondaryLabel}"/>
                </Button>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                <Button x:Name="SendFileButton" 
                        Style="{StaticResource macOSButtonStyle}"
                        Click="SendFileButton_Click"
                        Margin="0,0,8,0">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Upload" Width="16" Height="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Send File"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Button x:Name="CancelTransferButton" 
                        Style="{StaticResource macOSSecondaryButtonStyle}"
                        Click="CancelTransferButton_Click"
                        Margin="0,0,8,0">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Cancel" Width="16" Height="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Cancel Selected"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Button x:Name="ClearCompletedButton" 
                        Style="{StaticResource macOSSecondaryButtonStyle}"
                        Click="ClearCompletedButton_Click">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Delete" Width="16" Height="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Clear Completed"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
            </StackPanel>

            <!-- Transfer List -->
            <Border Grid.Row="1" Background="White" BorderBrush="{StaticResource OpaqueSeparator}" BorderThickness="1" CornerRadius="8">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="TransferList" ItemTemplate="{StaticResource TransferItemTemplate}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Margin="8"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{StaticResource SystemSecondaryBackground}" BorderBrush="{StaticResource OpaqueSeparator}" BorderThickness="0,1,0,0">
            <Grid Height="32">
                <TextBlock x:Name="StatusText" 
                           Text="Ready" 
                           VerticalAlignment="Center" 
                           Margin="16,0" 
                           FontSize="12" 
                           Foreground="{StaticResource SecondaryLabel}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
