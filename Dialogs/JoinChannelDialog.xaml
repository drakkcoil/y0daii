<Window x:Class="Y0daiiIRC.JoinChannelDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Join Channel" 
        Height="300" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <materialDesign:PackIcon Kind="AccountPlus" Width="48" Height="48" 
                                     HorizontalAlignment="Center" 
                                     Foreground="{DynamicResource PrimaryHueMidBrush}"/>
            <TextBlock Text="Join Channel" 
                       Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                       HorizontalAlignment="Center"
                       Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Form -->
        <StackPanel Grid.Row="1" Spacing="16">
            <TextBox x:Name="ChannelTextBox"
                     materialDesign:HintAssist.Hint="Channel Name (e.g., #general)"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Text="#"/>

            <TextBox x:Name="PasswordTextBox"
                     materialDesign:HintAssist.Hint="Password (optional)"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

            <TextBlock Text="Popular channels:" 
                       Style="{StaticResource MaterialDesignCaptionTextBlock}"
                       Margin="0,8,0,0"/>
            
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="#general" 
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Click="ChannelSuggestion_Click"/>
                <Button Content="#help" 
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Click="ChannelSuggestion_Click"/>
                <Button Content="#programming" 
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Click="ChannelSuggestion_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,24,0,0">
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Click="CancelButton_Click"
                    Margin="0,0,8,0"/>
            <Button x:Name="JoinButton"
                    Content="Join"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Click="JoinButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
</Window>
