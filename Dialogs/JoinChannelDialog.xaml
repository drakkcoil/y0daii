<Window x:Class="Y0daiiIRC.JoinChannelDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Join Channel" 
        Height="400" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F8F9FA"
        TextElement.Foreground="#323130"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- macOS Design System Colors -->
        <SolidColorBrush x:Key="SystemBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SystemSecondaryBackground" Color="#F2F2F7"/>
        <SolidColorBrush x:Key="SystemTertiaryBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="Label" Color="#000000"/>
        <SolidColorBrush x:Key="SecondaryLabel" Color="#3C3C43"/>
        <SolidColorBrush x:Key="TertiaryLabel" Color="#3C3C43"/>
        <SolidColorBrush x:Key="QuaternaryLabel" Color="#2C2C2E"/>
        <SolidColorBrush x:Key="AccentColor" Color="#007AFF"/>
        <SolidColorBrush x:Key="AccentColorHover" Color="#0056CC"/>
        <SolidColorBrush x:Key="AccentColorPressed" Color="#004499"/>
        <SolidColorBrush x:Key="SystemRed" Color="#FF3B30"/>
        <SolidColorBrush x:Key="SystemGreen" Color="#34C759"/>
        <SolidColorBrush x:Key="SystemBlue" Color="#007AFF"/>
        <SolidColorBrush x:Key="OpaqueSeparator" Color="#C6C6C8"/>

        <!-- Button Styles -->
        <Style x:Key="macOSButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentColorHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentColorPressed}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="macOSSecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource OpaqueSeparator}"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource SystemSecondaryBackground}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource OpaqueSeparator}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ChannelSuggestionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource OpaqueSeparator}"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource SystemSecondaryBackground}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource OpaqueSeparator}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" BorderBrush="{StaticResource OpaqueSeparator}" BorderThickness="0,0,0,1">
            <Grid Height="48">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                    <materialDesign:PackIcon Kind="AccountPlus" Width="20" Height="20" VerticalAlignment="Center" Foreground="{StaticResource AccentColor}" Margin="0,0,8,0"/>
                    <TextBlock Text="Join Channel" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="{StaticResource Label}"/>
                </StackPanel>
                
                <Button Grid.Column="1" 
                        Width="32" 
                        Height="32" 
                        Background="Transparent" 
                        BorderThickness="0" 
                        Click="CloseButton_Click"
                        Margin="16,0">
                    <materialDesign:PackIcon Kind="Close" Width="16" Height="16" Foreground="{StaticResource SecondaryLabel}"/>
                </Button>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="White">
            <StackPanel Margin="32">
                <!-- Channel Information -->
                <Border Background="{StaticResource SystemSecondaryBackground}" Padding="16" CornerRadius="8" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Channel Information" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource Label}" Margin="0,0,0,12"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Channel Name:" Width="120" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBox x:Name="ChannelTextBox" Width="250" Text="#" Padding="8"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Password:" Width="120" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBox x:Name="PasswordTextBox" Width="250" Padding="8"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Popular Channels -->
                <Border Background="{StaticResource SystemSecondaryBackground}" Padding="16" CornerRadius="8">
                    <StackPanel>
                        <TextBlock Text="Popular Channels" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource Label}" Margin="0,0,0,12"/>
                        <TextBlock Text="Click a channel name to quickly join:" FontSize="12" Foreground="{StaticResource TertiaryLabel}" Margin="0,0,0,8"/>
                        
                        <StackPanel Orientation="Horizontal">
                            <Button Content="#general" 
                                    Style="{StaticResource ChannelSuggestionButtonStyle}"
                                    Click="ChannelSuggestion_Click"/>
                            <Button Content="#help" 
                                    Style="{StaticResource ChannelSuggestionButtonStyle}"
                                    Click="ChannelSuggestion_Click"/>
                            <Button Content="#programming" 
                                    Style="{StaticResource ChannelSuggestionButtonStyle}"
                                    Click="ChannelSuggestion_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="2" Background="White" BorderBrush="{StaticResource OpaqueSeparator}" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="16,12">
                <Button x:Name="CancelButton"
                        Content="Cancel"
                        Style="{StaticResource macOSSecondaryButtonStyle}"
                        Click="CancelButton_Click"
                        Margin="0,0,8,0"/>
                <Button x:Name="JoinButton"
                        Content="Join"
                        Style="{StaticResource macOSButtonStyle}"
                        Click="JoinButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>