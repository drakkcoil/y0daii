<Window x:Class="Y0daiiIRC.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Settings" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryMid" Padding="16,8">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="Settings" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock Text="Settings" Style="{StaticResource MaterialDesignHeadline6TextBlock}" VerticalAlignment="Center"/>
            </StackPanel>
        </materialDesign:ColorZone>

        <!-- Content -->
        <TabControl Grid.Row="1" Margin="16" Style="{StaticResource MaterialDesignTabControl}">
            <TabItem Header="General">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16" Spacing="16">
                        <materialDesign:Card Padding="16">
                            <StackPanel Spacing="16">
                                <TextBlock Text="Appearance" Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                                
                                <ComboBox x:Name="ThemeComboBox"
                                          materialDesign:HintAssist.Hint="Theme"
                                          Style="{StaticResource MaterialDesignOutlinedComboBox}">
                                    <ComboBoxItem Content="Dark"/>
                                    <ComboBoxItem Content="Light"/>
                                </ComboBox>

                                <ComboBox x:Name="PrimaryColorComboBox"
                                          materialDesign:HintAssist.Hint="Primary Color"
                                          Style="{StaticResource MaterialDesignOutlinedComboBox}">
                                    <ComboBoxItem Content="Deep Purple"/>
                                    <ComboBoxItem Content="Blue"/>
                                    <ComboBoxItem Content="Green"/>
                                    <ComboBoxItem Content="Orange"/>
                                    <ComboBoxItem Content="Red"/>
                                </ComboBox>

                                <ComboBox x:Name="SecondaryColorComboBox"
                                          materialDesign:HintAssist.Hint="Secondary Color"
                                          Style="{StaticResource MaterialDesignOutlinedComboBox}">
                                    <ComboBoxItem Content="Lime"/>
                                    <ComboBoxItem Content="Cyan"/>
                                    <ComboBoxItem Content="Pink"/>
                                    <ComboBoxItem Content="Yellow"/>
                                </ComboBox>
                            </StackPanel>
                        </materialDesign:Card>

                        <materialDesign:Card Padding="16">
                            <StackPanel Spacing="16">
                                <TextBlock Text="Behavior" Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                                
                                <CheckBox x:Name="AutoConnectCheckBox"
                                          Content="Auto-connect on startup"
                                          Style="{StaticResource MaterialDesignCheckBox}"/>

                                <CheckBox x:Name="ShowTimestampsCheckBox"
                                          Content="Show message timestamps"
                                          Style="{StaticResource MaterialDesignCheckBox}"/>

                                <CheckBox x:Name="ShowJoinPartCheckBox"
                                          Content="Show join/part messages"
                                          Style="{StaticResource MaterialDesignCheckBox}"/>

                                <CheckBox x:Name="PlaySoundCheckBox"
                                          Content="Play sound for new messages"
                                          Style="{StaticResource MaterialDesignCheckBox}"/>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Connection">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16" Spacing="16">
                        <materialDesign:Card Padding="16">
                            <StackPanel Spacing="16">
                                <TextBlock Text="Default Connection Settings" Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                                
                                <TextBox x:Name="DefaultServerTextBox"
                                         materialDesign:HintAssist.Hint="Default Server"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         Text="irc.libera.chat"/>

                                <TextBox x:Name="DefaultPortTextBox"
                                         materialDesign:HintAssist.Hint="Default Port"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         Text="6667"/>

                                <TextBox x:Name="DefaultNicknameTextBox"
                                         materialDesign:HintAssist.Hint="Default Nickname"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                                <CheckBox x:Name="UseSSLByDefaultCheckBox"
                                          Content="Use SSL/TLS by default"
                                          Style="{StaticResource MaterialDesignCheckBox}"/>

                                <TextBox x:Name="PingIntervalTextBox"
                                         materialDesign:HintAssist.Hint="Ping Interval (seconds)"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         Text="60"/>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Notifications">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16" Spacing="16">
                        <materialDesign:Card Padding="16">
                            <StackPanel Spacing="16">
                                <TextBlock Text="Notification Settings" Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                                
                                <CheckBox x:Name="EnableNotificationsCheckBox"
                                          Content="Enable desktop notifications"
                                          Style="{StaticResource MaterialDesignCheckBox}"/>

                                <CheckBox x:Name="NotifyOnMentionCheckBox"
                                          Content="Notify when mentioned"
                                          Style="{StaticResource MaterialDesignCheckBox}"/>

                                <CheckBox x:Name="NotifyOnPrivateMessageCheckBox"
                                          Content="Notify on private messages"
                                          Style="{StaticResource MaterialDesignCheckBox}"/>

                                <CheckBox x:Name="NotifyOnChannelMessageCheckBox"
                                          Content="Notify on channel messages"
                                          Style="{StaticResource MaterialDesignCheckBox}"/>

                                <Slider x:Name="NotificationVolumeSlider"
                                        Minimum="0"
                                        Maximum="100"
                                        Value="50"
                                        materialDesign:HintAssist.Hint="Notification Volume"/>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="16">
            <Button x:Name="ResetButton"
                    Content="Reset to Defaults"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Click="ResetButton_Click"
                    Margin="0,0,8,0"/>
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Click="CancelButton_Click"
                    Margin="0,0,8,0"/>
            <Button x:Name="SaveButton"
                    Content="Save"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
